<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pum"
    tools:context="com.example.android.verdadyreto.Second_Activity"
    android:weightSum="1">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/ve"
        android:onClick="verdad"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/verdad" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/imageView4"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/o" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:scaleType="centerCrop"
        android:onClick="reto"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/r"
        android:id="@+id/reto" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/riza"
        android:background="#fafdf5"
        android:layout_marginTop="125dp"

        />


</LinearLayout>
